{
  "name": "@repo/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./orm": "./src/orm.ts"
  },
  "scripts": {
    "clean:all": "rimraf .turbo node_modules",
    "types:check": "tsc --noEmit",
    "push": "dotenv -e ../../.env.local -- npx drizzle-kit push --config=drizzle.config.ts",
    "generate": "dotenv -e ../../.env.local -- npx drizzle-kit generate --config=drizzle.config.ts",
    "migrate": "dotenv -e ../../.env.local -- npx drizzle-kit migrate --config=drizzle.config.ts",
    "studio": "dotenv -e ../../.env.local -- npx drizzle-kit studio --config=drizzle.config.ts",
    "reset": "dotenv -e ../../.env.local -- tsx ./src/reset.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.6",
    "drizzle-zod": "^0.8.3",
    "postgres": "^3.4.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.20.6"
  }
}
