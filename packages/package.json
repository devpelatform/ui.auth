{
  "name": "@pelatform/ui.auth",
  "version": "0.4.0",
  "description": "Plug & play UI components for Better Auth.",
  "author": "Pelatform Dev",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./css": {
      "development": "./src/style.css",
      "default": "./dist/style.css"
    },
    ".": {
      "development": {
        "types": "./src/index.dev.ts",
        "default": "./src/index.dev.ts"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./server": {
      "development": {
        "types": "./src/server.ts",
        "default": "./src/server.ts"
      },
      "import": {
        "types": "./dist/server.d.ts",
        "default": "./dist/server.js"
      },
      "require": {
        "types": "./dist/server.d.cts",
        "default": "./dist/server.cjs"
      }
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "clean:all": "rimraf .turbo dist node_modules",
    "dev": "tsup --watch",
    "build": "tsup --clean --dts && cp src/style.css dist/style.css",
    "types:check": "tsc --noEmit"
  },
  "homepage": "https://github.com/devpelatform/ui.auth",
  "files": [
    "dist/*",
    "README.md"
  ],
  "keywords": [
    "pelatform",
    "auth",
    "auth ui",
    "better auth",
    "components"
  ],
  "dependencies": {
    "@better-fetch/fetch": "^1.1.18",
    "@hcaptcha/react-hcaptcha": "^1.14.0",
    "@noble/hashes": "^2.0.1",
    "@react-email/components": "^0.5.7",
    "@wojtekmaj/react-recaptcha-v3": "^0.1.4",
    "lucide-react": "^0.546.0",
    "qrcode": "^1.5.4",
    "react-google-recaptcha": "^3.1.0",
    "slugify": "^1.6.6",
    "ua-parser-js": "^2.0.6"
  },
  "devDependencies": {
    "@pelatform/ui": "^1.5.0",
    "@types/node": "^24.9.1",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/react-google-recaptcha": "^2.1.9",
    "better-auth": "^1.3.29",
    "esbuild-plugin-preserve-directives": "^0.0.11",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@hookform/resolvers": ">=5.2.0",
    "@marsidev/react-turnstile": ">=1.1.0",
    "@pelatform/ui": ">=1.5.0",
    "@tanstack/query-core": ">=5.80.0",
    "better-auth": ">=1.3.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
